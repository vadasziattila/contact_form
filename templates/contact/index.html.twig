<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact Form</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <!-- Bootstrap CSS meghívása -->
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
</head>
<body>

<div class="container mt-3">
    <form action="{{ path('contact') }}" method="POST">
        {% for flashMessage in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" name="name" placeholder="Neved">
            <label for="name">Neved</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail címed">
            <label for="email">E-mail címed</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" name="message" placeholder="Az üzenetet ide írd" id="message" style="height: 100px"></textarea>
            <label for="message">Üzenet</label>
        </div>
        <button class="btn btn-primary" type="submit">Küldés</button>
    </form>
</div>

{% block javascript %}
    {{ encore_entry_script_tags('app') }}
    <!-- Bootstrap JavaScript meghívása -->
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
